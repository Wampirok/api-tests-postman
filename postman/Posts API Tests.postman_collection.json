    {
      "name": "POST Create new post",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "\r",
              "\r",
              "\r",
              "pm.test(\"check title\", function () {\r",
              "    var jsonData = pm.response.json();\r",
              "    pm.expect(jsonData.title).to.eql(pm.environment.get(\"title\"));\r",
              "});\r",
              "\r",
              "pm.test(\"Check views\", function () {\r",
              "    var jsonData = pm.response.json();\r",
              "    pm.expect(jsonData.views).to.eql(Number(pm.environment.get(\"ranodmViews\")));\r",
              "});\r",
              "\r",
              "const jsonData = pm.response.json();\r",
              "\r",
              "// Save post ID for further requests\r",
              "pm.environment.set(\"postId\", jsonData.id);\r",
              "\r",
              "pm.test(\"Created post should contain id\", function () {\r",
              "    pm.expect(pm.response.json()).to.have.property(\"id\");\r",
              "});\r",
              "\r",
              "\r",
              ""
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        },
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "\r",
              "\r",
              "pm.environment.set(\"ranodmViews\", pm.variables.replaceIn('{{$randomInt}}'));"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": " {\r\n   \r\n        \"title\": \"{{title}}\",\r\n        \"views\": {{ranodmViews}}\r\n    }",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
